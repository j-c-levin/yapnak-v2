<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.uq.yapnak.RatingActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:gravity = "center">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="460dp"
        android:background="@drawable/layoutborder"
        android:elevation="2dp"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_button"
            style="@style/login_button"
            android:textColor="@color/colorPrimary"
            android:background="#00ffffff"
            android:text="Submit"
            android:onClick="submit"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/comment"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Rate"
            android:id="@+id/rate_title"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="30sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:numStars="5"
            android:stepSize="1"
            android:rating="4"
            android:progressTint="@color/colorPrimary"
            android:layout_below="@+id/rate_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isAccepted"
            android:singleLine="false"
            android:text="Did the vendor provide the offer?"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorPrimary"
            android:checked="true"
            android:layout_below="@+id/rate_title"
            android:button="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate the vendor 1 to 5"
            android:id="@+id/rate_text"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/isAccepted"
            android:textSize="20sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optionally, leave a brief comment"
            android:id="@+id/comment_text"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/rating"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_centerInParent="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:layout_below="@+id/comment_text"
            android:layout_alignStart="@+id/comment_text"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/comment_text"
            android:editable="true"
            android:lines="1"
            android:maxLength="140"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/close_rating"
            android:src="@drawable/close"
            android:scaleType="fitXY"
            android:background="#00ffffff"
            android:tint="#ffffff"
            android:onClick="close"
            android:layout_alignTop="@+id/rate_title"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</FrameLayout>
