<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--White background-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!--Red border-->
    <item android:right="20dip" android:left="20dip" android:bottom="8dip"
        android:top="8dip">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="@dimen/search_border_radius" />
            <stroke
                android:width="3dip"
                android:color="@color/colorPrimaryDark" />
            <size
                android:width="90dip"
                android:height="20dip" />
        </shape>
    </item>
    <!--Search button fill-->
    <item android:right="21dip" android:left="300dip" android:bottom="8dip"
        android:top="8dip">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="@dimen/search_border_radius" />
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <!--Search button fill-->
    <item android:right="30dip" android:left="300dip" android:bottom="8dip"
        android:top="8dip">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</layer-list>