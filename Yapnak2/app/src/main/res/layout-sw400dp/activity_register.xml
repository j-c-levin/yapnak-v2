<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uq.yapnak.Register">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/QRCodeImage"
        android:src="@drawable/qrcodeimg"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/register_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-60dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/register_background"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#424242" />

            <TextView
                android:id="@+id/register_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/register_background"
                android:layout_marginBottom="-45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="1: Select a meal you like."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/divider"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/register_instruction"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/divider" />

            <TextView
                android:id="@+id/register_data_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/register_field"
                android:layout_below="@+id/divider"
                android:layout_marginTop="20dp"
                android:text="Enter Email"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_field"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/register_data_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:editable="true"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/register_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/register_field"
                android:layout_below="@+id/register_field"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="#00ffffff"
                android:onClick="registerEmail"
                android:text="Continue"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_form"
        android:layout_marginBottom="-60dp"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#424242" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:editable="true"
            android:inputType="number"
            android:layout_below="@+id/imageView4"
            android:enabled="false"
            android:hint="Card Number" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:editable="true"
            android:inputType="number"
            android:enabled="false"
            android:layout_alignTop="@+id/editText3"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3"
            android:hint="CVC"
            android:layout_marginTop="60dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:editable="true"
            android:inputType="number"
            android:enabled="false"
            android:hint="Month"
            android:layout_above="@+id/textView4"
            android:layout_toLeftOf="@+id/editText6"
            android:layout_toStartOf="@+id/editText6"
            android:layout_marginRight="21dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:editable="true"
            android:inputType="number"
            android:enabled="false"
            android:hint="Year"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignTop="@+id/editText3"
            android:layout_marginTop="60dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/divider" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/background"
            android:layout_marginBottom="-45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Card Details"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="18dp"
            android:background="#00ffffff"
            android:onClick="registerEmail"
            android:text="Finish"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/editText6"
            android:layout_alignRight="@+id/editText3"
            android:layout_alignEnd="@+id/editText3" />
    </RelativeLayout>

</RelativeLayout>
