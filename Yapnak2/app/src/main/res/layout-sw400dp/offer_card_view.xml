<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    android:onClick="onCardClick"
    android:background="#00ffffff"
    style="@style/login_button"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:elevation="100dp"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/offer_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:cropToPadding="false"
            android:src="@drawable/wok"
            android:contentDescription="@string/offer_image"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/offer_dark"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:cropToPadding="false"
            android:background="#cc000000"
            android:alpha="0" />

        <ImageView
            android:id="@+id/offer_gradient"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:cropToPadding="false"
            android:src="@drawable/offer_card_gradient"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/offer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/client_name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/default_offer"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:alpha="100"
            android:layout_alignParentStart="false"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/default_client_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#dd3a3a"
            android:textSize="15sp"
            android:textStyle="italic"
            android:alpha="100" />

        <TextView
            android:id="@+id/offer_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/client_name"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:autoText="false"
            android:text="@string/default_offer_distance"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:alpha="100"
            android:textIsSelectable="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get"
            android:id="@+id/get"
            android:layout_alignParentTop="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="45sp"
            android:layout_marginTop="55dp"
            android:onClick="onGetClick"
            android:alpha="0"
            android:nestedScrollingEnabled="false"
            android:clickable="false"
            android:enabled="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/favourite"
            android:src="@drawable/heart"
            android:scaleType="fitXY"
            android:background="#00050505"
            android:tint="#ff0000"
            android:layout_marginRight="50dp"
            android:onClick="onFavouriteClick"
            android:layout_alignTop="@+id/rate"
            android:layout_toLeftOf="@+id/get"
            android:layout_toStartOf="@+id/get"
            android:alpha="0"
            android:nestedScrollingEnabled="false"
            android:clickable="false"
            android:enabled="false"
            android:contentDescription="@string/favourite_button" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/rate"
            android:src="@drawable/favourite"
            android:background="#00050505"
            android:tint="#ff0000"
            android:scaleType="fitXY"
            android:onClick="onRateClick"
            android:alpha="0"
            android:nestedScrollingEnabled="false"
            android:clickable="false"
            android:contentDescription="@string/rate_button"
            android:layout_alignBottom="@+id/offer_text"
            android:layout_alignLeft="@+id/get"
            android:layout_marginLeft="-10dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/location"
            android:src="@drawable/location"
            android:background="#00050505"
            android:tint="#ff0000"
            android:scaleType="fitXY"
            android:onClick="onLocationClick"
            android:alpha="0"
            android:layout_alignTop="@+id/rate"
            android:nestedScrollingEnabled="false"
            android:clickable="false"
            android:contentDescription="@string/location_button"
            android:layout_alignParentEnd="false"
            android:layout_alignRight="@+id/get"
            android:layout_marginRight="-10dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/recommend"
            android:background="#00050505"
            android:tint="#d16f6f6f"
            android:scaleType="fitXY"
            android:onClick="onRecommendClick"
            android:alpha="0"
            android:src="@drawable/recommend"
            android:nestedScrollingEnabled="false"
            android:layout_alignTop="@+id/location"
            android:layout_toRightOf="@+id/location"
            android:layout_alignParentEnd="false"
            android:clickable="false"
            android:contentDescription="@string/recommend_button"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/clientId"
            android:layout_alignTop="@+id/get"
            android:layout_toLeftOf="@+id/location"
            android:layout_toStartOf="@+id/location"
            android:visibility="gone"
            android:clickable="false" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/offerId"
            android:layout_alignTop="@+id/get"
            android:layout_toLeftOf="@+id/location"
            android:layout_toStartOf="@+id/location"
            android:visibility="gone"
            android:clickable="false" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/gps"
            android:layout_alignTop="@+id/get"
            android:layout_toLeftOf="@+id/location"
            android:layout_toStartOf="@+id/location"
            android:visibility="gone"
            android:clickable="false" />

    </RelativeLayout>
</android.support.v7.widget.CardView>